<div class="row">
	<div class="columns large-12">
		<p>Hello <%= @user.name %>! You are playing round <%= @game_info[:round_id] %> of match <%= @game_info[:match_id]%>.</p>
		<div class="row">
		<form class="columns large-3" method="post" action="/play/<%= @game_info[:match_id] %>/<%= @game_info[:round_id] %>/r">
			<h1><input type="submit" value="ROCK" class="button"></h1>
		</form>
		<form class="columns large-3" method="post" action="/play/<%= @game_info[:match_id] %>/<%= @game_info[:round_id] %>/p">
			<h1><input type="submit" value="PAPER" class="button"></h1>
		</form>
		<form class="columns large-3" method="post" action="/play/<%= @game_info[:match_id] %>/<%= @game_info[:round_id] %>/s">
			<h1><input type="submit" value="SCISSORS" class="button"></h1>
		</form>		
		<form class="columns large-2" method="post" action="/play/<%= @game_info[:match_id] %>/<%= @game_info[:round_id] %>/x">
			<h1><input type="submit" value="?" class="button"></h1>
		</form>		
		</div>
	</div>
</div>

<!-- MATCH HISTORY -->

<% @history.each do |round| %>

	ROUND: <%= round.round_id %>
	YOUR MOVE: 
	<% if @game_info[:player_position] == 1 %>
		<%= round.player_1_move %>
	<% else %>
		<%= round.player_2_move %>
	<% end %>
	YOUR OPPONENT'S MOVE:
	<% if @game_info[:player_position] == 1 %>
		<%= round.player_2_move %>
	<% else %>
		<%= round.player_1_move %>
	<% end %>	
	RESULT:
	<% if round.result == @game_info[:player_position] %>
		YOU WON!
	<% else %>
		YOU LOST!
	<% end %>
<% end %>
<br>
