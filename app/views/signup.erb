<div align="center">
  <h2>Signup!</h2>
  <% if flash[:alert] %>
    Alert:<%= flash[:alert] %>
  <% end %>
  <form action='/signup' method='post'>
    <input type='email' name='email' required = "required" placeholder='Email'><br>
    <input type='text' name='screenname' placeholder='Screen Name' required = "required"><br>
    <input type='password' name='password' placeholder='Password' required = "required"><br />
    <input type='password' name='password_conf' placeholder='Verify password' required = "required"><br />
    <input type='submit' class="button" value='Submit'>
  </form>
  <br>
  <p>If you want to add an image to your profile, please go to Account Settings after you sign up.</p>
</div>